Algoritmo Punto1
	Definir num1 como entero;
	
	Escribir "Digite un numero: ";
	Leer num1;

	Si num1 > 0
		Escribir  "El numero digitado es positivo.";
		Si num1 < 0
			Escribir  "El numero digitado es negativo.";
		FinSi
		
		Si num1 = 0
			Escribir  "El numero digitado es cero.";
		FinSi
	FinSi
	
	
FinAlgoritmo
